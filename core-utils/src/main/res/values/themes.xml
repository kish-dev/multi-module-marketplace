<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UsualText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="UsualText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UsualText.Bold.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="UsualCardView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/gray</item>
    </style>

    <style name="UsualCardView.Purple">
        <item name="android:textColor">@color/white</item>
        <item name="cardBackgroundColor">@color/purple_200</item>
    </style>

    <style name="UsualCardView.Gray">
        <item name="cardBackgroundColor">@color/gray</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

</resources>